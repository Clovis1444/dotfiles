[user]
    name = @
    email = @
[init]
    defaultBranch = master
[pull]
    rebase = true
[credential]
    helper = store

; delta pager setup
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    # use n and N to move between diff sections
    navigate     = true
    dark         = true
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = zdiff3
